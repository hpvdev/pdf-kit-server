# Production Environment Configuration
NODE_ENV=production

# Server Configuration
PORT=3000
HOST=0.0.0.0

# Application Settings
APP_NAME=PDF Kit Server
APP_VERSION=2.0.0

# File Processing Limits
MAX_FILE_SIZE_MB=100
MAX_CONCURRENT_CONVERSIONS=3
CONVERSION_TIMEOUT_SECONDS=30

# Memory Management
MEMORY_THRESHOLD_PERCENT=85
MEMORY_CHECK_INTERVAL_MS=5000

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=50

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Security
CORS_ORIGIN=*
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE
CORS_CREDENTIALS=false

# Health Check
HEALTH_CHECK_TIMEOUT=10000
HEALTH_CHECK_INTERVAL=30000

# LibreOffice Configuration
LIBREOFFICE_PATH=/usr/bin/libreoffice
LIBREOFFICE_TIMEOUT=30000

# Performance Optimization
COMPRESSION_ENABLED=true
COMPRESSION_THRESHOLD=1024
COMPRESSION_LEVEL=6

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Error Handling
ENABLE_ERROR_REPORTING=true
ERROR_REPORTING_LEVEL=error

# Cache Configuration (if implemented)
CACHE_TTL=3600
CACHE_MAX_SIZE=100

# Database Configuration (if needed in future)
# DATABASE_URL=postgresql://user:password@localhost:5432/pdfkit
# DATABASE_POOL_SIZE=10

# Redis Configuration (if needed for caching/sessions)
# REDIS_URL=redis://localhost:6379
# REDIS_TTL=3600

# External Services (if any)
# EXTERNAL_API_TIMEOUT=10000
# EXTERNAL_API_RETRIES=3

# SSL Configuration (if handling SSL at app level)
# SSL_ENABLED=false
# SSL_CERT_PATH=
# SSL_KEY_PATH=

# Cluster Configuration
CLUSTER_ENABLED=true
CLUSTER_WORKERS=0  # 0 = auto-detect CPU cores

# Graceful Shutdown
GRACEFUL_SHUTDOWN_TIMEOUT=10000

# Development/Debug (disabled in production)
DEBUG_MODE=false
ENABLE_SWAGGER=false
ENABLE_PLAYGROUND=false
